<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_icon1"
    android:id="@+id/imv_icon1"/>

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wellcome to Say Dream"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/imv_icon1"
        app:layout_constraintRight_toRightOf="@id/imv_icon1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make by T2"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintLeft_toLeftOf="@id/imv_icon1"
        app:layout_constraintRight_toRightOf="@id/imv_icon1"
        android:id="@+id/tv_creator"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo3"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_tittle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/imv_logo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>